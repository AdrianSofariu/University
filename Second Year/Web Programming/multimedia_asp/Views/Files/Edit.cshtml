@model multimedia_app_asp.Models.MultimediaFile

@{
    ViewData["Title"] = "Edit Multimedia File";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-row">
        <label asp-for="Format"></label>
        <input asp-for="Format" class="form-control" required />
        <span asp-validation-for="Format" class="text-danger"></span>
    </div>

    <div class="form-row">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" required />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="form-row">
        <label asp-for="Path"></label>
        <input asp-for="Path" class="form-control" required />
        <span asp-validation-for="Path" class="text-danger"></span>
    </div>

    <div class="form-actions">
        <button type="submit">Update</button>
    </div>
</form>

<a asp-action="Index">Back</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
